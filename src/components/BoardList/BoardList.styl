.boardlist
  display grid
  grid-template-columns repeat(4, 0.23fr)
  grid-gap 50px 40px
  margin 30px 0 30px 6%

  &__create
    background-color #9fe7a4
    border-radius 15px
    width 100%
    height auto
    color #fff
    text-shadow 1px 1px 2px gray
    box-shadow 1px 1px 10px 0 rgba(0, 0, 0, 0.5)
    transition transform 0.2s ease-in
    word-wrap break-word

    &:hover
      cursor pointer
      transform scale(1.1)
      transition transform 0.2s ease-in
      
  &__item
    width 100%
    height 100px
    border-radius 15px
    box-shadow 1px 1px 10px 0 rgba(0, 0, 0, 0.5)
    transition transform 0.2s ease-in
    background-color #fff
    font-size large
    font-weight bold
    word-wrap break-word
    
    &_text
      padding-top 10%
      
    &:hover
      transform scale(1.1)
      transition transform 0.2s ease-in
      cursor pointer
